<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#455d7a"
    tools:context=".Signup">

    <TextView
        android:id="@+id/welcome2"
        android:layout_width="284dp"
        android:layout_height="65dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="60dp"
        android:text="Sign up Details ..."
        android:textAlignment="center"
        android:textColor="#ff6f3c"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/regno1"
        android:layout_width="217dp"
        android:layout_height="55dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="131dp"
        android:ems="10"
        android:hint="Registration Number"
        android:inputType="textPersonName"
        android:textColor="#e3e3e3"
        android:textColorHint="#e3e3e3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name1"
        android:layout_width="215dp"
        android:layout_height="53dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="129dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#e3e3e3"
        android:textColorHint="#e3e3e3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regno1" />

    <EditText
        android:id="@+id/gmail1"
        android:layout_width="215dp"
        android:layout_height="60dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="126dp"
        android:ems="10"
        android:hint="Gmail"
        android:inputType="textPersonName"
        android:textColor="#e3e3e3"
        android:textColorHint="#e3e3e3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name1" />

    <EditText
        android:id="@+id/passwd1"
        android:layout_width="219dp"
        android:layout_height="65dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="122dp"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPersonName"
        android:textColor="#e3e3e3"
        android:textColorHint="#e3e3e3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gmail1" />

    <Button
        android:id="@+id/signup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="175dp"
        android:backgroundTint="#ff6f3c"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>